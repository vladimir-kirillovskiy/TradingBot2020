from visualization.candlestick import get_last_ATR, get_dataframe, get_last_price


# аргументом функции является название акции

def risk(stock):
    df, time = get_dataframe(stock, 500)
    atr = get_last_ATR(df)
    price = get_last_price(df, 'c')
    if price < 1000:
        stop = 256 - 2 * atr
        return stop, (stop / price) * 100   #сколько акций мы можем себе позволить, учитывая стоп лосс
    else:
        return "Мы не можем позволить себе эту акцию"
